---
// component import
import Blob from "./Blob.astro";
import Link from "../Link.astro";

// data import
import socialNetworksData from "../../data/socialNetworksData";


const { 
    name = "Gaëlle",
    profession = "Développeuse front-end",
    hue = 115,
    lightColor = `hsl(${hue}, 66%, 82%)`,
    darkColor = `hsl(${hue}, 100%, 15%)`,
} = Astro.props;
---

<section class="center">
    <div>
        <div class="home__container container grid">
            
            <div class="grid">
                <ul class="home__social">
                    {
                        socialNetworksData.map(item => (
                            <li>
                                <Link
                                    href={item.href}
                                    leftIcon={item.icon}
                                    text=""
                                    color={darkColor}
                                    classes="colored"
                                />
                            </li>
                        ))
                    }
                </ul>
                
                <div>
                    <Blob {lightColor} />
                </div>
                
                <div>
                    <h1>Bonjour, <br> je suis {name}</h1>
                    <h2>{profession}</h2>
                    
                    <div class="home__button">
                        <Link
                            href="#contact"
                            classes="colored filled button--flex"
                            color={darkColor}
                            bgColor={lightColor}
                            rightIcon="message"
                            text="Me contacter"
                        />
                    </div>
                </div>
            </div>

            <div>
                <Link
                    href="#about"
                    classes="home__scroll-button button--flex primary"
                    leftIcon="mouse"
                    rightIcon="arrow-down"
                    color={darkColor}
                    iconClasses="icon-color"
                    text="Descendre"
                />
            </div>
        </div>

    </div>
</section>

<style define:vars={{ darkColor }}>
    .home__container {
        gap: 1rem;
    }

    .home__social {
        display: flex;
        gap: 1rem;
    }

    h1 {
        font-size: var(--h1-font-size);
        margin-bottom: var(--mar-0-5);
        color: var(--darkColor);

    }

    h2 {
        font-size: var(--h3-font-size);
        font-weight: var(--font-medium);
        margin-bottom: var(--mar-0-75);
    }

    .home__button {
        margin-top: var(--mar-2);
    }
</style>
