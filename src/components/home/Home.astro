---
// component import
import Blob from "./Blob.astro";
import Link from "../Link.astro";

// data import
import socialNetworksData from "../../data/socialNetworksData";

const { 
    name = "Gaëlle",
    profession = "Développeuse front-end"
} = Astro.props;
---

<section>
    <div>
        <div>
            <div>
                <ul>
                    {
                        socialNetworksData.map(item => (
                            <li>
                                <Link
                                    href={item.href}
                                    icon={{
                                        name: item.icon,
                                        side: "left"
                                    }}
                                    text=""
                                />
                            </li>
                        ))
                    }
                </ul>
            </div>

            <div>
                <Blob />
            </div>

            <div>
                <h1>Bonjour, je suis {name}</h1>
                <h2>{profession}</h2>
                
                <Link
                    href="#contact"
                    icon={{
                        name: "message",
                        side: "right"
                    }}
                    text="Me contacter"
                />
            </div>
        </div>

        <div>
            <Link
                href="#about"
                icon={{
                    name: "mouse",
                    side: "left"
                }}
                icon={{
                    name: "arrow-down",
                    side: "right"
                }}
                text="Descendre"
            />
            
        </div>
    </div>
</section>