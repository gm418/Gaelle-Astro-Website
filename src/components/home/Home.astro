---
// component import
import Blob from "./Blob.astro";
import Link from "../Link.astro";

// data import
import socialNetworksData from "../../data/socialNetworksData";

const { 
    name = "Gaëlle",
    profession = "Développeuse front-end"
} = Astro.props;
---

<section class="center">
    <div>
        <div class="home__container container grid">
            <div class="grid">
                <ul class="home__social">
                    {
                        socialNetworksData.map(item => (
                            <li>
                                <Link
                                    href={item.href}
                                    leftIcon={item.icon}
                                    text=""
                                />
                            </li>
                        ))
                    }
                </ul>
            </div>

            <div>
                <Blob />
            </div>

            <div>
                <h1>Bonjour, je suis {name}</h1>
                <h2>{profession}</h2>
                
                <div class="home__button">
                    <Link
                        href="#contact"
                        classes="filled"
                        rightIcon="message"
                        text="Me contacter"
                    />
                </div>
            </div>
        </div>

        <div>
            <Link
                href="#about"
                leftIcon="mouse"
                rightIcon="arrow-down"
                text="Descendre"
            />
        </div>
    </div>
</section>

<style>
    .home__container {
        gap: 1rem;
    }

    .home__social {
        display: flex;
        gap: 1rem;
    }

    h1 {
        font-size: var(--h1-font-size);
        margin-bottom: var(--mar-0-5);
    }

    .h2 {
        font-size: var(--h3-font-size);
        font-weight: var(--font-medium);
        margin-bottom: var(--mar-0-75);
    }

    .home__button {
        margin-top: var(--mar-2);
    }
</style>
