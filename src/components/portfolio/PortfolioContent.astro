---
const { title, techs, description, index, lightColor } = Astro.props;
---
 
<label for={`image${index + 1}`}>
    <div class="portfolio__content">
        <div class="portfolio__header">
            <h3>{title}</h3>
            <i class="uil-angle-right"></i>
        </div>

        <span>{techs}</span>

        <p class="portfolio__description">
            {description}
        </p>
    </div>
</label>

<style define:vars={{ lightColor }}>
.portfolio__header {
    display: flex;
    align-items: center;
    margin-bottom: var(--mar-0-25);
}

h3 {
    font-size: var(--h3-font-size);
    cursor: pointer;
    line-height: 1.2em;
}

i {
    transform: rotate(-90deg);
    font-size: 1.5rem;
    margin-left: 0.25rem;
}

span {
    display: block;
    font-size: var(--smaller-font-size);
    margin-bottom: var(--mar-1);
    line-height: 1.2em;
    color: var(--text-color-light);
}

p {
    line-height: 1.2em;
}
</style>
