---
// layout import
import SectionLayout from "../../layouts/SectionLayout.astro";

// data import
import qualificationData from "../../data/qualificationData";

// component import
import QualificationTimeLine from "./QualificationTimeLine.astro";

const {
    sectionTitle="Exp√©rience",
    sectionSubtitle="Mon parcours professionnel"
} = Astro.props
---

<SectionLayout {sectionTitle} {sectionSubtitle}>
<div class="container">
    <div class="qualification__tabs">
        <button>
            <i class="uil-graduation-cap"></i>
            Etudes
        </button>
        
        <button>
            <i class="uil-briefcase-alt"></i>
            Travail
        </button>
    </div>

    <div>
        <QualificationTimeLine data={qualificationData.education} />
        <QualificationTimeLine data={qualificationData.workExp} />
    </div>
</div>
</SectionLayout>

<style>
    .qualification__tabs {
        display: flex;
        justify-content: space-evenly;
        margin-bottom: var(--mar-2-5);
    }

    button {
        font-size: var(--h3-font-size);
    }
    
    i {
        font-size: 1.8rem;
        margin-right: var(--mar-0-25);
    }
</style>
