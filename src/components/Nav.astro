---
// component import
import Link from "./Link.astro";

// data import
import navData from "../data/navData";
---

<nav class="nav container">
    <a href="#" class="nav__logo">GaÃ«lle Morin</a>

    <div class="nav__menu">
        <ul class="grid nav__list">
            {
                navData.map(item => (
                    <li>
                        <Link
                            href={item.url}
                            style="primary"
                            leftIcon={item.icon}
                            text={item.title}
                        />
                    </li>
                ))
            }
        </ul>
        <i class="uil-times"></i>
    </div>

    <div class="nav__btns">
        <div class="change-theme">
            <i class="uil-moon"></i>
        </div>

        <div class="nav__toggle">
            <i class="uil-apps"></i>
        </div>
    </div>
</nav>


<style>
    .nav {
        max-width: 968px;
        height: var(--header-height);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .nav__logo,
    .nav__toggle,
    .change-theme {
        color: var(--title-color);
    }

    .nav__logo:hover {
        border-bottom: 1px var(--title-color) solid;
    }

    .nav__menu {
        position: fixed;
        box-shadow: 0 -1px 4px rgba(0, 0, 0, .15);
        border-radius: 1.5rem 1.5rem 0 0;
        left: 0;
        bottom: -100%;
        width: 100%;
        padding: 2em 1.5em 4em;
        transition: .3s;
    }

    .nav__btns {
        display: flex;
        align-items: center;
    }

    .nav__toggle,
    .change-theme {
        font-size: 1.25rem;
        cursor: pointer;
    }

    .change-theme {
        margin-right: var(--mar-1);
    }
</style>
