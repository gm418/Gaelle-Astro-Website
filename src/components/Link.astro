---
const {
href,
classes,
text,
leftIcon,
rightIcon,
iconClasses,
style,
...rest
} = Astro.props;
---

<a
    href={href}
    class:list={[
        classes,
        style
    ]}
    {...rest}
>
{
    leftIcon && (
        <i class={'uil-' + leftIcon + (iconClasses ? ' ' + iconClasses : '')}></i>
    )
}
{text}
{
    rightIcon && (
        <i class={'uil-' + rightIcon + (iconClasses ? ' ' + iconClasses : '')}></i>
    )
}
</a>


<style>
    .primary {
        color: var(--title-color);
    }

    .secondary {
        
    }

    /*========== classes ==========*/
    .nav__link {
        display: flex;
        flex-direction: column;
        align-items: center;
        font-size: var(--small-font-size);
        word-break: break-all;
    }

    .nav__link:hover {
        color: var(--title-color-light);
    }

    /*========== iconClasses ==========*/
    .nav__icon {
        font-size: 1.28em;
    }
</style>
