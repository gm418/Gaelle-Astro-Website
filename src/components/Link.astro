---
const {
href,
classes,
color,
bgColor,
text,
leftIcon,
rightIcon,
iconClasses,
...rest
} = Astro.props;
---

<a
    href={href}
    class={classes}
    {...rest}
>
{
    leftIcon && (
        <i class={'uil-' + leftIcon + (iconClasses ? ' ' + iconClasses : '')}></i>
    )
}
{text}
{
    rightIcon && (
        <i class={'uil-' + rightIcon + (iconClasses ? ' ' + iconClasses : '')}></i>
    )
}
</a>


<style define:vars={{ color, bgColor }}>
    i {
        font-size: 1.28em;
    }

    .primary {
        color: var(--text-color);
    }

    .colored {
        color: var(--color);
    }

    :is(.primary, .colored:not(.filled)):hover,
    :is(.primary, .colored:not(.filled)):focus  {
        color: var(--text-color-light);
    }

    .icon-color {
        color: var(--color);
    }

    .underline {
        text-decoration: underline;
    }

    .filled {
        background: linear-gradient(to right, var(--color) 50%, var(--bgColor) 50%);
        background-size: 202% 100%;
        background-position: right bottom;
        transition: all .5s ease-out;
        padding: 1em;
        border-radius: .5rem;
    }

    .filled:hover,
    .filled:focus {
        color: var(--bgColor);
        background-position: left bottom;
    }

    .filled i {
        margin-left: var(--mar-0-5);
    }

    /*========== classes ==========*/
    .nav__link {
        display: flex;
        flex-direction: column;
        align-items: center;
        font-size: var(--small-font-size);
        word-break: break-all;
    }

    .home__scroll-button {
        transition: .5s;
    }

    .home__scroll-button:hover {
        transform: translateY(.25rem);
    }

    /* For large devices */
    @media screen and (min-width: 768px) {
        .home__scroll-button {
            margin-left: 3rem;
        }
    }
    
    /*========== iconClasses ==========*/
    .nav__icon {
        font-size: 1.28em;
    }

    /* For large devices */
    @media screen and (min-width: 768px) {
        .nav__icon {
            display: none;
        }
    }
    
    .home__scroll-button {
        font-size: var(--small-font-size);
    }

    .home__scroll-button > i:first-child {
        font-size: 1.88em;
    }
</style>
