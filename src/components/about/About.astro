---
// layout import
import SectionLayout from "../../layouts/SectionLayout.astro";

const {
    sectionTitle="A propos de moi",
    sectionSubtitle="Me, myself and I",
    hue = 216,
    darkColor = `hsl(${hue}, 85%, 34%)`,
    lightColor = `hsl(${hue}, 85%, 52%)`
} = Astro.props;
---

<SectionLayout {sectionTitle} {sectionSubtitle} {darkColor}>
    <p class="container">
        Développeuse junior avec 3 ans d'expérience dans le développement de sites et d'applications web en utilisant HTML5,
        CSS3, JavaScript et des frameworks CSS.
        J'identifie et corrige les problèmes durant les tests ou les retours des utilisateurs.
    </p>
</SectionLayout>

<style>
    p {
        text-align: center;
        line-height: 1.2em;
        max-width: 75ch;
    }

    /*==================== MEDIA QUERIES ====================*/
    /* For large devices */
    @media screen and (min-width: 768px) {
        p {
            text-align: left;
            line-height: 1.4em;
        }
    }
</style>

