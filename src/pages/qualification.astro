---
// layout import
import MainLayout from "../layouts/MainLayout.astro"

// data import
import qualificationData from "../data/qualificationData";

// component import
import QualificationTab from "../components/QualificationTab.astro";

// styles import
import "../styles/styles.css";
---

<MainLayout
    pageTitle="Expérience professionnelle"
    pageDescription=""
    sectionTitle="Expérience"
    sectionSubtitle="Mon parcours professionnel"
>

<div>
    <div>
        <button>
            <i class="uil-graduation-cap"></i>
            Etudes
        </button>
        
        <button>
            <i class="uil-briefcase-alt"></i>
            Travail
        </button>
    </div>
</div>

<div>
    <QualificationTab data={qualificationData.education} />
    <QualificationTab data={qualificationData.workExp} />
</div>

</MainLayout>
